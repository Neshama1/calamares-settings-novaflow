#! /bin/bash

set -x

# -- Link package manager binaries for Calamares to not freak out during installation.

sudo ln -svf /opt/1 /usr/bin/apt
sudo ln -svf /opt/2 /usr/bin/apt-get
sudo ln -svf /opt/3 /usr/bin/dpkg

sudo chmod +x /opt/{1,2,3}

# -- Launch Calamares.

sudo -E calamares -d 

# -- Delete links when Calamares closes.

sudo rm /usr/bin/{apt,apt-get,dpkg}
