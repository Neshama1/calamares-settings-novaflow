#! /bin/bash

set -x

### Link package manager binaries for Calamares to not freak out during installation.

ln -sv /opt/1 /usr/bin/apt
ln -sv /opt/2 /usr/bin/apt-get
ln -sv /opt/3 /usr/bin/dpkg

### Launch Calamares and save the log to /tmp

ps aux | grep 'calamares'
if [ $? == 0 ];
    then
        touch "/tmp/calamares.log"
        nohup sudo -E calamares -d 2>&1 &>> "/tmp/calamares.log"
fi
